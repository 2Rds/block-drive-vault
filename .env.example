# BlockDrive Environment Configuration
# Copy this file to .env and fill in your values

# ==================================
# Supabase Configuration
# ==================================
VITE_SUPABASE_PROJECT_ID="your-project-id"
VITE_SUPABASE_PUBLISHABLE_KEY="your-anon-key"
VITE_SUPABASE_URL="https://your-project.supabase.co"

# ==================================
# Dynamic Authentication + Wallets
# ==================================
VITE_DYNAMIC_ENVIRONMENT_ID="your-dynamic-environment-id"

# ==================================
# Solana Configuration
# ==================================
# Network: 'devnet' or 'mainnet-beta'
VITE_SOLANA_NETWORK="devnet"

# BlockDrive program ID (set after deployment)
# Run: solana address -k programs/blockdrive/target/deploy/blockdrive-keypair.json
VITE_BLOCKDRIVE_PROGRAM_ID="PLACEHOLDER_UPDATE_AFTER_DEPLOYMENT"

# NFT collection address (set after deployment)
# Run: solana address -k programs/blockdrive/target/deploy/nft-collection-keypair.json
VITE_NFT_COLLECTION_ADDRESS="PLACEHOLDER_UPDATE_AFTER_DEPLOYMENT"

# SNS parent domain owner wallet
VITE_SNS_PARENT_OWNER="FJ6jvjHVEKPmcGWrSe1b8HJ8maZp68PY5AzZ8PQnNtZ3"

# ==================================
# Cloudflare Configuration (Optional)
# ==================================
# R2 Storage (S3-compatible)
VITE_R2_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
VITE_R2_BUCKET_NAME="blockdrive-storage"
VITE_R2_ACCESS_KEY_ID="your-r2-access-key"
VITE_R2_SECRET_ACCESS_KEY="your-r2-secret-key"

# Cloudflare IPFS Gateway
VITE_CLOUDFLARE_IPFS_GATEWAY="https://cloudflare-ipfs.com"

# ==================================
# Storage Providers
# ==================================
# Filebase IPFS
VITE_FILEBASE_ACCESS_KEY="your-filebase-key"
VITE_FILEBASE_SECRET_KEY="your-filebase-secret"
VITE_FILEBASE_BUCKET="your-bucket-name"

# AWS S3 (if using S3 instead of R2)
VITE_AWS_REGION="us-east-1"
VITE_AWS_ACCESS_KEY_ID="your-aws-key"
VITE_AWS_SECRET_ACCESS_KEY="your-aws-secret"
VITE_S3_BUCKET_NAME="your-s3-bucket"

# Arweave (optional)
VITE_ARWEAVE_WALLET_PATH="path/to/arweave-wallet.json"

# ==================================
# Payment Providers
# ==================================
# Stripe
VITE_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-key"

# Radom (Crypto Payments - URLs from Radom dashboard)
VITE_RADOM_PRO_MONTHLY_URL="https://checkout.radom.com/..."
VITE_RADOM_PRO_QUARTERLY_URL="https://checkout.radom.com/..."
VITE_RADOM_PRO_ANNUAL_URL="https://checkout.radom.com/..."
VITE_RADOM_POWER_MONTHLY_URL="https://checkout.radom.com/..."
VITE_RADOM_POWER_QUARTERLY_URL="https://checkout.radom.com/..."
VITE_RADOM_POWER_ANNUAL_URL="https://checkout.radom.com/..."
VITE_RADOM_SCALE_MONTHLY_URL="https://checkout.radom.com/..."
VITE_RADOM_SCALE_QUARTERLY_URL="https://checkout.radom.com/..."
VITE_RADOM_SCALE_ANNUAL_URL="https://checkout.radom.com/..."

# ==================================
# Feature Flags (Optional)
# ==================================
VITE_ENABLE_CRYPTO_PAYMENTS="false"
VITE_ENABLE_TEAM_FEATURES="false"
VITE_ENABLE_ZK_PROOFS="true"
